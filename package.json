{
  "name": "atcoder-ts",
  "version": "0.0.0",
  "description": "A boilerplate for AtCoder with TypeScript.",
  "main": "src/main.ts",
  "scripts": {
    "test": "jest",
    "lint": "tslint src/**/*.{ts,tsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shamofu/atcoder-ts.git"
  },
  "author": "shamofu",
  "license": "MIT",
  "jest": {
    "verbose": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.6",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
